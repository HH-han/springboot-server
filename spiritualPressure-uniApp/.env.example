# 环境配置文件示例
# 复制此文件为 .env.development 或 .env.production 并根据需要修改

# 环境类型
NODE_ENV=development

# API 配置
VITE_API_BASE_URL=http://localhost:3000/api
VITE_APP_BASE_URL=http://localhost:3000

# 应用信息
VITE_APP_TITLE=SpiritualPressure
VITE_APP_VERSION=1.0.0

# 第三方认证
VITE_WEIXIN_APP_ID=your_weixin_app_id
VITE_ALIPAY_APP_ID=your_alipay_app_id
VITE_QQ_APP_ID=your_qq_app_id

# 调试设置
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# 功能开关
VITE_ENABLE_MOCK=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false

# 地图服务
VITE_MAP_API_KEY=your_map_api_key
VITE_MAP_TYPE=amap

# 文件上传
VITE_UPLOAD_MAX_SIZE=10
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
VITE_UPLOAD_BASE_URL=https://upload.yourdomain.com

# WebSocket
VITE_WS_URL=ws://localhost:3000/ws

# CDN配置
VITE_CDN_BASE_URL=https://cdn.yourdomain.com

# 数据库配置（可选）
VITE_DB_HOST=localhost
VITE_DB_PORT=3306
VITE_DB_NAME=spiritual_pressure
VITE_DB_USER=root
VITE_DB_PASSWORD=your_password

# Redis配置（可选）
VITE_REDIS_HOST=localhost
VITE_REDIS_PORT=6379
VITE_REDIS_PASSWORD=your_redis_password

# 邮件服务
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your_email@gmail.com
VITE_SMTP_PASS=your_email_password

# 短信服务
VITE_SMS_APP_ID=your_sms_app_id
VITE_SMS_APP_KEY=your_sms_app_key

# 支付配置
VITE_WECHAT_PAY_MCH_ID=your_mch_id
VITE_ALIPAY_APP_PRIVATE_KEY=your_private_key

# 安全配置
VITE_JWT_SECRET=your_jwt_secret_key
VITE_ENCRYPTION_KEY=your_encryption_key

# 性能优化
VITE_ENABLE_GZIP=true
VITE_ENABLE_BROTLI=true
VITE_ENABLE_CACHE=true