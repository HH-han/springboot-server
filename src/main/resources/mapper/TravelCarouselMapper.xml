<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.travel.dao.TravelCarouselDao">
    <!-- ResultMap定义 -->
    <resultMap id="travelCarouselResultMap" type="com.example.travel.entity.TravelCarousel">
        <id property="id" column="id"/>
        <result property="image" column="image"/>
        <result property="title" column="title"/>
        <result property="location" column="location"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    <!-- 查询所有 -->
    <select id="findAllCarousel" resultMap="travelCarouselResultMap">
        SELECT * FROM travel_carousel
        <where>
            <if test="keyword != null and keyword != ''">
                AND (title LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
        LIMIT #{offset}, #{pageSize}
    </select>
    <!-- 查询总数（用于分页） -->
    <select id="countCarousel" resultType="int">
        SELECT COUNT(*) FROM travel_carousel
        <where>
            <if test="keyword != null and keyword != ''">
                AND (title LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
    </select>
    <!-- 根据ID查询 -->
    <select id="findById" parameterType="long" resultMap="travelCarouselResultMap">
        SELECT * FROM travel_carousel WHERE id = #{id}
    </select>
    <!-- 修改 -->
    <update id="updateCarousel" parameterType="com.example.travel.entity.TravelCarousel">
        UPDATE travel_carousel
        SET image = #{image},
            title = #{title},
            location = #{location},
            description = #{description},
            created_at = #{createdAt},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    <!-- 新增 -->
    <insert id="insertCarousel" parameterType="com.example.travel.entity.TravelCarousel">
        INSERT INTO travel_carousel (image, title, location, description, created_at, updated_at)
        VALUES (#{image}, #{title}, #{location}, #{description},#{createdAt},#{updatedAt})</insert>

    <select id="exists" resultType="boolean">
        SELECT COUNT(1)
        FROM travel_carousel
        WHERE id = #{id}
    </select>
    <!--删除-->
    <delete id="deleteById">
        DELETE FROM `travel_carousel` WHERE id = #{id}
    </delete>
</mapper>