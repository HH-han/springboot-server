<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.travel.dao.TravelRecommendDao">
    <!-- ResultMap定义 -->
    <resultMap id="travelRecommendResultMap" type="com.example.travel.entity.TravelRecommend">
        <id property="id" column="id"/>
        <result property="image" column="image"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="details" column="details"/>
    </resultMap>
    <!-- 查询所有 -->
    <select id="findAllRecommend" resultMap="travelRecommendResultMap">
        SELECT * FROM travel_recommend
        <where>
            <if test="keyword != null and keyword != ''">
                AND (name LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
        LIMIT #{offset}, #{pageSize}
    </select>
    <!-- 查询总数（用于分页） -->
    <select id="countRecommend" resultType="int">
        SELECT COUNT(*) FROM travel_recommend
        <where>
            <if test="keyword != null and keyword != ''">
                AND (name LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
    </select>
    <!-- 根据ID查询 -->
    <select id="findById" parameterType="long" resultMap="travelRecommendResultMap">
        SELECT * FROM travel_recommend WHERE id = #{id}
    </select>
    <!-- 修改 -->
    <update id="updateRecommend" parameterType="com.example.travel.entity.TravelRecommend">
        UPDATE travel_recommend
        SET image = #{image},
            name = #{name},
            description = #{description},
            details = #{details}
        WHERE id = #{id}
    </update>
    <!-- 新增 -->
    <insert id="insertRecommend" parameterType="com.example.travel.entity.TravelRecommend">
        INSERT INTO travel_recommend (image, name, description, details)
        VALUES (#{image}, #{name}, #{description}, #{details})</insert>

    <select id="exists" resultType="boolean">
        SELECT COUNT(1)
        FROM travel_recommend
        WHERE id = #{id}
    </select>
    <!--删除-->
    <delete id="deleteById">
        DELETE FROM travel_recommend WHERE id = #{id}
    </delete>
</mapper>