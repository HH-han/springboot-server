<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.travel.dao.TravelBlogDao">

    <!-- 结果映射 -->
    <resultMap id="travelBlogResultMap" type="com.example.travel.entity.TravelBlog">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="location" column="location"/>
        <result property="coverImage" column="cover_image"/>
        <result property="likes" column="likes"/>
        <result property="price" column="price"/>
        <result property="favorites" column="favorites"/>
        <result property="created_at" column="created_at"/>
        <result property="updata_at" column="updata_at"/>
        <result property="browse" column="browse"/>
        <result property="state" column="state"/>
    </resultMap>
    <!-- 查询所有（分页） -->
    <select id="findAllTravel" resultMap="travelBlogResultMap">
        select *from travel_blog
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
        LIMIT #{offset}, #{pageSize}
    </select>
    <!-- 查询总数 -->
    <select id="countTravel" resultType="int">
        SELECT COUNT(*) FROM travel_blog
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
    </select>
    <!-- 查询所有旅游博客 -->
    <select id="SelectAllTravel" resultMap="travelBlogResultMap">
        SELECT
            id,
            title,
            content,
            location,
            cover_image AS coverImage,
            likes,
            favorites,
            created_at AS createdAt
            updata_at AS updataAt
        FROM travel_blog
        ORDER BY created_at DESC
    </select>

    <!-- 根据ID查询单个旅游博客 -->
    <select id="findById" resultMap="travelBlogResultMap">
        SELECT * FROM travel_blog
        WHERE id = #{id}
    </select>

    <!-- 点赞功能：增加点赞数 -->
    <update id="incrementLikes">
        UPDATE travel_blog
        SET likes = likes + 1
        WHERE id = #{id}
    </update>

    <!-- 收藏功能：增加收藏数 -->
    <update id="incrementFavorites">
        UPDATE travel_blog
        SET favorites = favorites + 1
        WHERE id = #{id}
    </update>
    <!-- 修改 -->
    <update id="updateTravelBlog" parameterType="com.example.travel.entity.TravelBlog">
        UPDATE travel_blog
        SET title=#{title},
            content=#{content},
            cover_image=#{coverImage},
            favorites=#{favorites},
            created_at=#{created_at},
            updata_at=#{updata_at},
            price=#{price},
            location=#{location},
            likes=#{likes},
            browse=#{browse},
            state=#{state}
        WHERE id = #{id}
    </update>
    <!-- 新增 -->
    <insert id="insertTravelBlog" parameterType="com.example.travel.entity.TravelBlog">
        INSERT INTO travel_blog(
            title,
            content,
            location,
            cover_image,
            favorites,
            price,
            created_at,
            updata_at,
            likes,
            browse,
            state
        ) VALUES (
            #{title},
            #{content},
            #{location},
            #{coverImage},
            #{favorites},
            #{price},
            #{created_at},
            #{updata_at},
            #{likes},
            #{browse},
            #{state}
        )
    </insert>
    <!-- 删除 -->
    <delete id="deleteTravelBlog" parameterType="java.lang.Long">
        DELETE FROM travel_blog WHERE id = #{id}
    </delete>
    <select id="exists" resultType="boolean">
        SELECT COUNT(*) FROM travel_blog WHERE id = #{id}
    </select>
</mapper>