<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.travel.dao.TravelNewsDao">

    <!-- 结果映射 -->
    <resultMap id="travelNewsResultMap" type="com.example.travel.entity.TravelNews">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="location" column="location"/>
        <result property="coverImage" column="coverImage"/>
        <result property="created_at" column="created_at"/>
        <result property="updated_at" column="updated_at"/>
    </resultMap>
    <!-- 查询所有（分页） -->
    <select id="findAllTravelNews" resultMap="travelNewsResultMap">
        select *from travel_news
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
        LIMIT #{offset}, #{pageSize}
    </select>
    <!-- 查询总数 -->
    <select id="countTravelNews" resultType="int">
        SELECT COUNT(*) FROM travel_news
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
    </select>
    <!-- 查询所有旅游博客 -->
    <select id="SelectAllTravelNews" resultMap="travelNewsResultMap">
        SELECT * FROM travel_news
        ORDER BY created_at DESC
    </select>

    <!-- 根据ID查询单个旅游博客 -->
    <select id="findById" resultMap="travelNewsResultMap">
        SELECT * FROM travel_news
        WHERE id = #{id}
    </select>

    <!-- 点赞功能：增加点赞数 -->
    <update id="incrementLikes">
        UPDATE travel_news
        SET likes = likes + 1
        WHERE id = #{id}
    </update>

    <!-- 收藏功能：增加收藏数 -->
    <update id="incrementFavorites">
        UPDATE travel_news
        SET favorites = favorites + 1
        WHERE id = #{id}
    </update>
    <!-- 修改 -->
    <update id="updateTravelNews" parameterType="com.example.travel.entity.TravelNews">
        UPDATE travel_news
        SET title=#{title},
            content=#{content},
            coverImage=#{coverImage},
            created_at=#{created_at},
            updated_at=#{updated_at},
            location=#{location}
        WHERE id = #{id}
    </update>
    <!-- 新增 -->
    <insert id="insertTravelNews" parameterType="com.example.travel.entity.TravelNews">
        INSERT INTO travel_news
        (
            id,
            title,
            content,
            location,
            coverImage,
            created_at,
            updated_at
        ) VALUES (
                     #{id},
                     #{title},
                     #{content},
                     #{location},
                     #{coverImage},
                     #{created_at},
                     #{updated_at}
                 )
    </insert>
    <!-- 删除 -->
    <delete id="deleteTravelNews" parameterType="java.lang.Long">
        DELETE FROM travel_news WHERE id = #{id}
    </delete>
    <select id="exists" resultType="boolean">
        SELECT COUNT(*) FROM travel_news WHERE id = #{id}
    </select>
</mapper>