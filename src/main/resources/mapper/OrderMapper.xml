<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.travel.dao.OrderDao">
    <!-- ResultMap定义 -->
    <resultMap id="orderResultMap" type="com.example.travel.entity.Order">
        <id property="id" column="id"/>
        <result property="image" column="image"/>
        <result property="price" column="price"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="status" column="status"/>
        <result property="orderDate" column="order_date"/>
        <result property="paymentDate" column="payment_date"/>
        <result property="paymentMethod" column="payment_method"/>
        <result property="sku" column="sku"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
    </resultMap>
    <!-- 查询所有订单（分页） -->
    <select id="findAllOrder" resultMap="orderResultMap">
        SELECT * FROM orders
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 查询订单总数（用于分页） -->
    <select id="countOrders" resultType="int">
        SELECT COUNT(*) FROM orders
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
    </select>

    <!-- 根据 ID 查询订单 -->
    <select id="findById" resultMap="orderResultMap">
        SELECT * FROM orders WHERE id = #{id}
    </select>

    <!-- 新增订单 -->
    <insert id="insert" parameterType="com.example.travel.entity.Order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders (image, price, totalAmount, status, orderDate, paymentDate, paymentMethod, sku)
        VALUES (#{image}, #{price}, #{totalAmount}, #{status}, #{orderDate}, #{paymentDate}, #{paymentMethod}, #{sku})
    </insert>
    <!-- 删除订单 -->
    <delete id="deleteById">
        DELETE FROM orders WHERE id = #{id}
    </delete>
    <!-- 修改 -->
    <update id="update" parameterType="com.example.travel.entity.Order">
        UPDATE orders
        SET image = #{image},
            price = #{price},
            totalAmount = #{totalAmount},
            status = #{status},
            orderDate = #{orderDate},
            paymentDate = #{paymentDate},
            paymentMethod = #{paymentMethod},
            sku = #{sku}
        WHERE id = #{id}
    </update>


</mapper>