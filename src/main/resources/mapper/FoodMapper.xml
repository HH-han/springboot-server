<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.travel.dao.FoodDao">
    <!-- ResultMap定义 -->
    <resultMap id="foodResultMap" type="com.example.travel.entity.Food">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="image" column="image"/>
        <result property="price" column="price"/>
        <result property="sales" column="sales"/>
        <result property="rating" column="rating"/>
        <result property="provinceId" column="province_id"/>
        <result property="created_at" column="created_at"/>
        <result property="updated_at" column="updated_at"/>
    </resultMap>
    <!-- 查询所有 -->
    <select id="findAllfood" resultMap="foodResultMap">
        SELECT * FROM travel_foods
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
    </select>
    <!-- 查询总数（用于分页） -->
    <select id="countfood" resultType="int">
        SELECT COUNT(*) FROM travel_foods
        <where>
            <if test="keyword != null and keyword != ''">
                AND (sku LIKE CONCAT('%', #{keyword}, '%') OR id = #{keyword})
            </if>
        </where>
    </select>
    <select id="searchByNameOrDescription" resultMap="foodResultMap">
        SELECT * FROM travel_foods
        WHERE name LIKE CONCAT('%', #{keyword}, '%')
           OR description LIKE CONCAT('%', #{keyword}, '%')
    </select>
    <select id="findById" resultMap="foodResultMap">
        SELECT * FROM travel_foods WHERE id = #{id}
    </select>
    <!-- 新增 -->
    <insert id="insertFood" parameterType="Food" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO travel_foods (name, price, image, rating, sales, description)
        VALUES (
            #{name},
            #{price,jdbcType=DECIMAL},
            #{image},
            #{rating},
            #{sales},
            #{description}
        )
    </insert>

    <!-- 修改 -->
    <update id="updateFood" parameterType="Food">
        UPDATE travel_foods
        SET name = #{name},
            description = #{description},
            price = CONVERT(#{price,jdbcType=DECIMAL}, DOUBLE),
            image = #{image},
            rating = #{rating},
            sales = #{sales}

        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <select id="exists" resultType="boolean">
        SELECT COUNT(1)
        FROM travel_foods
        WHERE id = #{id}
    </select>
    <delete id="deleteFood" parameterType="long">
        DELETE FROM travel_foods WHERE id = #{id}
    </delete>
</mapper>